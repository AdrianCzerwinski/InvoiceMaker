<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InvoiceMaker" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextEditClient" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name = "boxBackgroundColor">@color/white</item>
        <item name = "hintTextColor">@color/text</item>
        <item name = "boxStrokeColor">@color/text</item>
        <item name = "boxStrokeErrorColor">@color/teal_700</item>
        <item name = "color">@color/teal_700</item>
        <item name = "boxCornerRadiusBottomEnd">16dp</item>
        <item name = "boxCornerRadiusBottomStart">16dp</item>
        <item name = "boxCornerRadiusTopEnd">16dp</item>
        <item name = "boxCornerRadiusTopStart">16dp</item>
        <item name = "android:textColor">@color/text</item>
        <item name = "android:textColorHint">@color/text</item>
    </style>

    <style name="TextChooseClient" parent="Widget.AppCompat.TextView" >
        <item name = "boxBackgroundColor">@color/white</item>
        <item name = "boxStrokeColor">@color/text</item>
        <item name = "hintTextColor">@color/text</item>
        <item name = "boxStrokeColor">@color/text</item>
        <item name = "boxStrokeErrorColor">@color/teal_700</item>
        <item name = "color">@color/teal_700</item>
        <item name = "boxCornerRadiusBottomEnd">16dp</item>
        <item name = "boxCornerRadiusBottomStart">16dp</item>
        <item name = "boxCornerRadiusTopEnd">16dp</item>
        <item name = "boxCornerRadiusTopStart">16dp</item>
        <item name = "android:textColor">@color/text</item>
        <item name = "android:textColorHint">@color/text</item>
    </style>

</resources>